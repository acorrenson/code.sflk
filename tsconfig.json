{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true
  },
  "include": [
    "server/**/*.ts"
  ]
}